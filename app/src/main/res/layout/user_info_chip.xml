<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="19dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/chip_icon"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/midgrey" />

    <TextView
        android:id="@+id/chip_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:paddingLeft="7dp"
        android:textColor="@color/midgrey"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/chip_icon"
        app:layout_constraintTop_toTopOf="@id/chip_icon"
        app:layout_constraintStart_toEndOf="@id/chip_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>